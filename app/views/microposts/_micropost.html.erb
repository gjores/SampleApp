<tr class="micropost">
	<td><span class="content"><%= micropost.content %></span></td>
	<td><span class="timestamp">Posted <%= time_ago_in_words(micropost.created_at) %> ago</span></td>
	</td>
		<% if current_user?(micropost.user) %>
		<td>
			<%= link_to "Delete", micropost, :method => :delete,
											 :confirm => "Are you sure?",
											 :title => micropost.content %>

		</td>
		<% end  %>
</tr>